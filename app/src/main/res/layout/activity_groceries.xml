<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".panels.CalendarActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groceries_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/groceries_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".83"/>

    <Button
        android:id="@+id/groceries_add"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:text="@string/add_item_button"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/nav_bar"
        app:layout_constraintEnd_toStartOf="@id/groceries_picked_up_button"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".075"
        app:layout_constraintTop_toBottomOf="@id/groceries_recycler"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".5" />

    <Button
        android:id="@+id/groceries_picked_up_button"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:text="@string/remove_picked_up"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/nav_bar"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".075"
        app:layout_constraintStart_toEndOf="@id/groceries_add"
        app:layout_constraintTop_toBottomOf="@id/groceries_recycler"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".5" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="53dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".075"
        app:layout_constraintTop_toBottomOf="@id/groceries_add"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>